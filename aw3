    console.log('âš¡ LIGHTNING TEST: Manual testing completed');
  });
  
  res.json({
    message: 'Lightning proxy testing started',
    mode: 'ULTRA-FAST',
    configuration: {
      concurrency: SPEED_OPTIMIZATION.proxyTestConcurrency,
      batchSize: SPEED_OPTIMIZATION.batchSize,
