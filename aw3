  if (proxyManager.isTesting) {
    return res.status(429).json({
      error: 'Lightning testing already in progress',
      mode: 'LIGHTNING SPEED'
    });
  }

  console.log('âš¡ LIGHTNING TEST: Manual testing initiated...');
  
